    "Stories": [
        {
            "Id": 1,
            "Title": "Create support ticket\n    ",
            "AsA": "User\n    ",
            "IWantTo": "create new support tickets\n    ",
            "SoThat": "I get help from the support team\n\n    ",
            "Accept": [
                {
                    "Require": [
                        "a wdy app crashed or has an unexpected error that is displayed in a popup\n        "
                    ],
                    "When": [
                        "the user clicks a button to submit the error\n        "
                    ],
                    "Then": [
                        "the error will be sent to the server\n        ",
                        "a support ticket ID will be displayed\n    "
                    ]
                },
                {
                    "Require": [
                        "a wdy app crashed or has an unexpected error that is displayed\n        "
                    ],
                    "When": [
                        "the user does not want to submit the error\n        "
                    ],
                    "Then": [
                        "the error disappears\n    "
                    ]
                }
            ]
        },
        {
            "Id": 2,
            "Title": "Close support ticket\n    ",
            "AsA": "Supporter\n    ",
            "IWantTo": "close user tickets once they have been handled\n    ",
            "SoThat": "the now old ticket no longer shows up in our backlog.\n",
            "Accept": null
        }
    ],
    "Glossary": {
        "Definitions": {
            "Ticket": "is a support ticket.\n",
            "User": "is someone who can create tickets.\n"
        }
    }
