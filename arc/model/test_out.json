                                "Params": {
                                    "id": "int"
                                },
                                "Returns": null
                            },
                            "CreateTicket": {
                                "Description": "Create a new ticket for this application withthe given information and return its Id.",
                                "Story": 1,
                                "Params": {
                                    "text": "string",
                                    "time": "int",
                                    "type": "string"
                                },
                                "Returns": {
                                    "id": "int"
                                }
                            }
                        }
                    }
                ]
            }
        }
